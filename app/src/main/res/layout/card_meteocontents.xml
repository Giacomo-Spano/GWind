<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/meteocarditem">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SPOTNAME"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:textColor="#FFFFFF"
                android:layout_gravity="left"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:textSize="32dp"
                android:textIsSelectable="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/speedTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="15,5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentLeft="false"
                    android:background="@android:color/transparent"
                    android:textSize="32dp"
                    android:textIsSelectable="true"
                    android:layout_gravity="bottom|right"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="km/h"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="false"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentLeft="false"
                    android:background="@android:color/transparent"
                    android:textSize="16dp"
                    android:textIsSelectable="true"
                    android:layout_gravity="bottom|right"
                    android:gravity="right"
                    android:layout_alignRight="@+id/windarrow" />

            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ultimo aggiornamento: "
                android:textColor="#FFFFFF"
                android:id="@+id/textView18"
                android:layout_gravity="right"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:textSize="10dp"
                android:layout_alignParentBottom="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="01/01/2015"
                android:textColor="#FFFFFF"
                android:id="@+id/dateTextView"
                android:layout_gravity="right"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:textSize="10dp"
                android:layout_alignParentBottom="false" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/opencloseImageView"
            android:src="@drawable/close"
            android:layout_gravity="right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/temperatureandpressure"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_widht"
                    android:layout_height="@dimen/icon_widht"
                    android:id="@+id/imageView2"
                    android:src="@drawable/temperature"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmisure_color"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="24,5"
                        android:id="@+id/temperatureTextView"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="\u00B0C"
                        android:id="@+id/textView15"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_widht"
                    android:layout_height="@dimen/icon_height"
                    android:id="@+id/imageView3"
                    android:src="@drawable/pressione"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1000"
                        android:textColor="@color/textmisure_color"
                        android:id="@+id/pressureTextView"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="hPa"
                        android:id="@+id/textView9"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:id="@+id/hunidityandrainrate"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_widht"
                    android:layout_height="@dimen/icon_height"
                    android:id="@+id/imageView5"
                    android:src="@drawable/rainrate2"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0.0 "
                        android:textColor="@color/textmisure_color"
                        android:id="@+id/rainrateTextView"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="mm"
                        android:id="@+id/textView14"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_widht"
                    android:layout_height="@dimen/icon_height"
                    android:id="@+id/imageView4"
                    android:src="@drawable/humidity"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="99"
                        android:textColor="@color/textmisure_color"
                        android:id="@+id/humidityTextView"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="%"
                        android:id="@+id/textView13"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/wind"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/windcontrol"
                    layout="@layout/windcontrol_main"
                    android:layout_width="@dimen/icon_widht"
                    android:layout_height="@dimen/icon_height"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/speedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textmisure_color"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="23.5"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="km/h "
                        android:id="@+id/textView10"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />

                    <TextView
                        android:id="@+id/directiontextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmisure_color"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="WNW"
                        android:layout_gravity="center_horizontal|top" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_widht"
                        android:layout_height="@dimen/icon_height"
                        android:id="@+id/imageView6"
                        android:src="@drawable/wind"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/trendImageView"
                        android:src="@drawable/up"
                        android:layout_gravity="center_horizontal|bottom" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/textmisure_color"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="25,1"
                        android:id="@+id/avspeedTextView"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="km/h"
                        android:id="@+id/textView19"
                        android:layout_gravity="center_horizontal|top"
                        android:textColor="@color/textmisure_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/bottomspace" />


</LinearLayout>